@model IEnumerable<MyMovieCollection.Models.ProductionCompany>
@using MyMovieCollection.Utils
@{
    ViewBag.Title = "Index";
}
<br>
<h2>Production Companies</h2>

<table class="table">
    <tr>
        <td align="right" colspan="7">
            @Html.ActionLink("Add Production Company", "Create", null, new { @class = "btn btn-primary" })
        </td>
    </tr>
    <tr>
        <th>
        </th>
        <td align="center">
            <b>@Html.DisplayNameFor(model => model.name)</b>
        </td>
        <td align="center">
            <b>@Html.DisplayNameFor(model => model.headquarters)</b>
        </td>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td align="center" style='vertical-align:middle'>
                <img src=@(ImageConfiguration.secure_base_url+ImageConfiguration.poster_sizes.ElementAt(1)+item.logo_path) height="30">
            </td>
            <td align="center" style='vertical-align:middle'>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td align="center" style='vertical-align:middle'>
                @Html.DisplayFor(modelItem => item.headquarters)
            </td>
            <td align="right" style='vertical-align:middle'>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
